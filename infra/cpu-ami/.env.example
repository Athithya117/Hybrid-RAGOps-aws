# .env.example -> copy to .env and edit values
# AWS settings
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Packer / AMI
AMI_NAME_PREFIX=ray-custom-ami
PACKER_INSTANCE_TYPE=t3.micro
PACKER_SOURCE_AMI_OWNER=099720109477   # Canonical (Ubuntu) owner id by default
PACKER_SOURCE_AMI_FILTER="ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*"

# Docker images to pre-pull into the AMI (can be ECR or Docker Hub)
APP1_IMAGE=<account-id>.dkr.ecr.us-east-1.amazonaws.com/app1:latest
APP2_IMAGE=<account-id>.dkr.ecr.us-east-1.amazonaws.com/app2:latest

# AMI ID produced by packer; optional â€” if blank script will print AMI after packer run
CUSTOM_AMI_ID=

# Pulumi / infra
PULUMI_STACK=dev
MY_SSH_CIDR=203.0.113.42/32   # Replace with your IP/CIDR for SSH
SSH_KEY_PATH=~/.ssh/my-key.pem

# Ray cluster settings to be inserted into generated YAML
RAY_CLUSTER_NAME=ray-inference-cpu-cluster
RAY_SSH_USER=ubuntu
RAY_SSH_PRIVATE_KEY=~/.ssh/my-key.pem
RAY_HEAD_INSTANCE_TYPE=t3.medium
RAY_WORKER_INSTANCE_TYPE=t3.large
RAY_MAX_WORKERS=5
